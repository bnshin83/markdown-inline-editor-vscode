{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UUID Schema",
  "description": "Schema for validating UUID formats",
  "type": "object",
  "properties": {
    "workflow_node_uuid": {
      "type": "string",
      "description": "Workflow node UUID",
      "pattern": "^\\d{2}-[A-Z]{2,}$",
      "examples": ["00-START", "01-PO", "02-ST", "04-BH"]
    },
    "sub_item_uuid": {
      "type": "string",
      "description": "Sub-item UUID within artifact",
      "pattern": "^\\d{2}-[A-Z]{2,}-[A-Z]+-\\d{3}$",
      "examples": ["01-PO-PROB-001", "04-BH-UC-001", "02-ST-SHK-001"]
    }
  },
  "definitions": {
    "uuid_reference": {
      "type": "object",
      "description": "UUID reference for cross-referencing",
      "properties": {
        "uuid": {
          "type": "string",
          "pattern": "^\\d{2}-[A-Z]{2,}-[A-Z]+-\\d{3}$"
        },
        "artifact": {
          "type": "string",
          "description": "Artifact file name",
          "pattern": "^\\d{2}-[A-Z]{2,}-[A-Za-z-]+\\.yaml$"
        },
        "anchor": {
          "type": "string",
          "description": "Anchor within artifact",
          "pattern": "^#[a-z0-9-]+$"
        }
      },
      "required": ["uuid"]
    }
  }
}
