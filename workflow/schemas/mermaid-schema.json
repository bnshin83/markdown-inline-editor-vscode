{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Mermaid Diagram Schema",
  "description": "Schema for Mermaid diagram fields in artifacts",
  "type": "object",
  "properties": {
    "mermaid_diagram": {
      "type": "string",
      "description": "Mermaid diagram code",
      "minLength": 1
    },
    "diagram_type": {
      "type": "string",
      "description": "Type of Mermaid diagram",
      "enum": [
        "flowchart",
        "sequenceDiagram",
        "classDiagram",
        "stateDiagram-v2",
        "erDiagram",
        "gantt",
        "pie",
        "gitGraph",
        "journey"
      ]
    },
    "title": {
      "type": "string",
      "description": "Diagram title",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Optional diagram description"
    }
  },
  "required": ["mermaid_diagram"]
}
